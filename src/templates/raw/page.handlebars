<div class="page">
    <h1> {{title}} </h1>
    <h2 class="price"> {{price}} </h2>

    {{#if images}}
        <img src="{{images.0.full}}" alt="{{title}}" class="full" />
        <ul class='thumbs'>
            {{#each images}}
                <li>
                    <img src="{{thumb}}"  />
                </li>
            {{/each}}
        </ul>
    {{/if}}
    
    {{#if attributes}}
        <h1>Details</h1>
        <ul class="details">
            <li>
                <div>Location:</div>
                <div>{{attributes.location}}</div>
            </li>
            <li>
                <div>Posted date:</div>
                <div>{{attributes.creationdate}}</div>
            </li>
            <li>
                <div>ID:</div>
                <div>{{attributes.adid}}</div>
            </li>
        </ul>
    {{/if}}

    {{#if description}}
        <h1>Description</h1>
        <p>{{{description}}}</p>
    {{/if}}
    
</div>
